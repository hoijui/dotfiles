# peco-logfiles-insert-at-pos() {
  local pos=$CURSOR
  local selected=$(mylog files | peco --query="$LBUFFER" | sed 's/ /\\ /g' | tr '[:cntrl:]' ' ')
  if [ -n "$selected" ]; then
    if [ -n "$BUFFER" ]; then
    	BUFFER="${BUFFER[1,$pos]}${selected}${BUFFER[$pos,-1]}"
    else
      BUFFER="tail -f ${selected}"
    fi
    CURSOR=$#BUFFER
    # zle accept-line
  fi
  zle -R
  # zle -R -c
# }
# zle -N peco-logfiles-insert-at-pos
