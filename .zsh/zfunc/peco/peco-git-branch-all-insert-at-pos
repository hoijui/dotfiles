# peco-git-branch-insert-at-pos() {
  local pos=$CURSOR
  local selected="$(git branch -a | sed -e 's!^\(\s*\)remotes/!!g' | peco | sed -e 's/^\s*//')"
  if [ -n "$selected" ]; then
    BUFFER="${BUFFER[1,$pos]}$(echo $selected | sed 's/ /\\ /g' | tr '[:cntrl:]' ' ')${BUFFER[$pos,-1]}"
    CURSOR=$#BUFFER
  fi
  zle redisplay
  # zle -R -c
# }
