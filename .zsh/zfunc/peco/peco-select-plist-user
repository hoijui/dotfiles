# peco-select-plist-user() {
  local pos=$CURSOR
  local selected="$(ls ~/Library/LaunchAgents/*.plist ~/Library/LaunchDaemons/*.plist | peco)"
  if [ -n "$selected" ]; then
    BUFFER="${BUFFER[1,$pos]}$(echo $selected | sed 's/ /\\ /g' | tr '[:cntrl:]' ' ')${BUFFER[$pos,-1]}"
    CURSOR=$#BUFFER
  fi
  zle -R
# }
