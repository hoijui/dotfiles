# peco-homebrew-plist-insert-at-pos() {
  local pos=$CURSOR
  local selected="$(ls $(brew --prefix)/opt/*/*.plist | peco)"
  if [ -n "$selected" ]; then
    BUFFER="${BUFFER[1,$pos]}$(echo $selected | sed 's/ /\\ /g' | tr '[:cntrl:]' ' ')${BUFFER[$pos,-1]}"
    CURSOR=$#BUFFER
  fi
  zle -R
# }
# zle -N peco-homebrew-plist-insert-at-pos
