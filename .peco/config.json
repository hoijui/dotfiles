{
  "Action": {
    "my.SelectAll": [
      "peco.ToggleRangeMode",
      "peco.SelectPrevious",
      "peco.ToggleRangeMode",
      "peco.SelectNext"
    ]
  },
  "CustomFilter": {
    "Migemo": {
      "Cmd": "migemogrep",
      "Args": ["$QUERY"],
      "BufferThreshold": 20
    }
  },
  "Keymap": {
    "M-f": "peco.ForwardWord",
    "M-b": "peco.BackwardWord",

    "M-ArrowRight": "peco.ForwardWord",
    "M-ArrowLeft":  "peco.BackwardWord",

    "C-d": "peco.DeleteForwardChar",
    "C-h": "peco.DeleteBackwardChar",
    "C-k": "peco.KillEndOfLine",

    "M-<": "peco.BeginningOfLine",
    "M->": "peco.EndOfLine",
    "M-d": "peco.DeleteForwardWord",
    "M-h": "peco.DeleteBackwardWord",

    "C-l": "peco.DeleteAll",

    "M-v": "peco.SelectPreviousPage",
    "C-v": "peco.SelectNextPage",

    "C-l": "peco.ToggleSelectionAndSelectNext",
    "C-s": "peco.SelectVisible",
    "C-/": "peco.ToggleRangeMode",

    "C-m": "peco.Finish",
    "C-j": "peco.Finish",

    "C-g": "peco.SelectNone"
  },
  "Style": {
    "Basic": ["on_default", "default"],
    "SavedSelection": ["bold", "on_yellow", "black"],
    "Selected": ["underline", "on_cyan", "black"],
    "Query": ["yellow", "bold"],
    "Matched": ["red", "on_blue"]
  }
}
