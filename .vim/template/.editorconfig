root = true

[*]
end_of_line = LF
charset = utf-8
insert_final_newline = true

[*.vim]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.rb]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.pl]
indent_style = space
indent_size = 4

[*.pm]
indent_style = space
indent_size = 4

[*.t]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false
trim_traling_whitespace = true
max_line_length = 120

[*.php]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab

[*.coffee]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

