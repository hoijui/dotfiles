# prefix

snippet prefix.epub
	xmlns:epub="http://www.idpf.org/2007/ops"

# SMIL

snippet smil
abbr SMIL Minimal Set
	<smil xmlns="http://www.w3.org/ns/SMIL"${1: xmlns:epub="http://www.idpf.org/2007/ops"} version="3.0">
	<body>
	${0}
	</body>
	</smil>

snippet smil#
abbr SMIL Maximum Set
	<smil xmlns="http://www.w3.org/ns/SMIL" version="3.0"${1: id="${2\}"}${3: epub:prefix="${4\}"}>
	<head>
	</head>
	<body>
	</body>
	</smil>${0}

snippet head
abbr head
	<head>
	${0}
	</head>

snippet body
abbr body
	<body>
	${1:<par></par>}
	${2:<seq epub:textref=""></seq>}${0}
	</body>

snippet body.par
abbr body > par
	<body>
	<par>
	${0}
	</par>
	</body>

snippet body.seq
abbr body > seq
	<body>
	<seq epub:textref="${1}">
	${0}
	</seq>
	</body>

snippet body#
	<body${1: id="${2\}"}${3: epub:type="${4\}"}${5: epub:textref="${6\}"}>
	${0}
	</body>

snippet body.par#
	<body${1: id="${2\}"}${3: epub:type="${4\}"}${5: epub:textref="${6\}"}>
