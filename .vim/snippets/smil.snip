snippet text
	<text src="${1}">

snippet text#
	<text${1: id=""} src="${2}">

snippet audio
	<audio src="${1}"/>

snippet audio#
	<audio${1: id=""} src="${2}"${3: clipBegin=""}${4: clipEnd=""}/>

