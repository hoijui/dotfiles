<?xml version="1.0"?>
<ruleset name="Custom Standard">

  <description>A custom coding standard on PSR2</description>

  <rule ref="PSR2">
    <!-- 除外したい項目を列挙 -->
    <exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
    <!-- <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/> -->
    <exclude name="Generic.Files.LineLength.TooLong"/>
    <!-- <exclude name="Generic.Commenting.DocComment.ParamGroup"/> -->
    <!-- <exclude name="Generic.FunctionComment.MissingParamComment"/> -->
    <!-- <exclude name="Squiz.Commenting.DocComment.ParamGroup"/> -->
    <!-- <exclude name="Squiz.FunctionComment.MissingParamComment"/> -->
    <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
    <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses"/>
    <!-- <exclude name="Generic.WhiteSpace.DisallowTabIndent.TabsUsed"/> -->
    <!-- <exclude name="Squiz.WhiteSpace.SuperfluousWhitespace.EndLine"/> -->
    <!-- <exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/> -->
    <!-- <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody"/> -->
    <!-- <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterKeyword"/> -->
    <!-- <exclude name="PSR2.Methods.FunctionCallSignature.MultipleArguments"/> -->
    <!-- <exclude name="Generic.Functions.FunctionCallArgumentSpacing.TooMuchSpaceA"/> -->
    <!-- <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterClosePar"/> -->
    <!-- <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingBeforeClose"/> -->
    <!-- <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterOpen"/> -->
  </rule>
  <!-- DocComment -->
  <rule ref="Squiz">
    <exclude name="Generic.Commenting.DocComment.NonParamGroup" comment="@return 前に改行"/>
    <exclude name="Squiz.Commenting.FunctionComment.MissingParamComment" comment="パラメータのコメント"/>
    <exclude name="Squiz.Commenting.FunctionComment.TypeHintMissing" comment="よくわからない"/>
    <exclude name="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing" comment="よくわからない"/>
    <exclude name="Squiz.Files.FileExtension.ClassFound" comment=".inc"/>
    <exclude name="Squiz.Commenting.ClassComment.Missing" comment="class comment"/>
    <exclude name="Generic.Formatting.MultipleStatementAlignment.NotSame" comment="= などの位置合わせ"/>
    <exclude name="Squiz.Classes.ClassFileName.NoMatch" comment="名前ズレ"/>
    <exclude name="Squiz.Commenting.FunctionComment.EmptyThrows" comment="throws に対するコメント"/>
    <exclude name="Squiz.Commenting.InlineComment.NotCapital" comment="最初大文字必須ルール"/>
    <exclude name="Generic.Commenting.DocComment.ShortNotCapital" comment="最初大文字必須ルール"/>
    <exclude name="Squiz.PHP.CommentedOutCode.Found" comment="実装コードのコメントアウト"/>
    <exclude name="Squiz.Arrays.ArrayDeclaration.KeyNotAligned" comment="align関連"/>
    <exclude name="Squiz.Arrays.ArrayDeclaration.CloseBraceNotAligned" comment="array閉じタグ位置"/>
    <exclude name="Squiz.Arrays.ArrayDeclaration.SingleLineNotAllowed" comment="１行内の array 値定義"/>
    <!-- <exclude name="Squiz.WhiteSpace.MemberVarSpacing.Incorrect" comment="メンバ変数前の空行必須"/> -->
    <exclude name="Squiz.Arrays.ArrayDeclaration.ValueNotAligned" comment="複数行 array のインデント8"/>
    <exclude name="Generic.Commenting.DocComment.MissingShort" comment="メンバ変数のdescription"/>
    <exclude name="Squiz.Strings.DoubleQuoteUsage.ContainsVar" comment="\"\"内の変数使用"/>
    <exclude name="Generic.Commenting.DocComment.TagValueIndent"/>
    <exclude name="Squiz.WhiteSpace.FunctionClosingBraceSpace.SpacingBeforeClose"/>
    <exclude name="Squiz.Commenting.ClosingDeclarationComment.Missing"/>
    <exclude name="Squiz.Commenting.FileComment.Missing"/>
    <exclude name="Squiz.Operators.ComparisonOperatorUsage.NotAllowed"/>
    <exclude name="Squiz.Functions.GlobalFunction.Found"/>
    <exclude name="Squiz.NamingConventions.ValidVariableName.NotCamelCaps"/>
    <exclude name="Squiz.PHP.Heredoc.NotAllowed"/>
    <exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
    <exclude name="Squiz.WhiteSpace.FunctionSpacing.Before"/>
    <exclude name="Squiz.WhiteSpace.FunctionSpacing.After"/>
    <exclude name="Squiz.Operators.ComparisonOperatorUsage.ImplicitTrue"/>
    <exclude name="PEAR.Functions.FunctionCallSignature.MultipleArguments"/>
    <exclude name="PEAR.Functions.FunctionCallSignature.CloseBracketLine"/>
    <exclude name="PEAR.Files.IncludingFile.BracketsNotRequired"/>
    <exclude name="PEAR.Functions.FunctionCallSignature.ContentAfterOpenBracket"/>
    <!-- <exclude name=""/> -->
  </rule>

</ruleset>
