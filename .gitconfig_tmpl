# vim:fdm=marker sw=2 ts=2 ft=gitconfig expandtab:
[include]
  path = ~/.gitconfig.d/core.txt
  path = ~/.gitconfig.d/alias.txt
  path = ~/.gitconfig.d/color.txt
  path = ~/.gitconfig.d/diff.txt
  path = ~/.gitconfig.d/ghq.txt
[user]
  name = fuga
  email = f@u.ga
[core]
  precomposeunicode = true
[push]
  default = upstream
[pull]
	rebase = true
[merge]
  ; tool = vimdiff
  tool = vimfugitive
  ff = false

[difftool "kdiff3"]
  path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false
[difftool "p4diff"]
  path = p4diff
[difftool "vimdiff"]
  cmd = vim -f -u "$HOME/.vimrc.min" -d "$LOCAL" "$REMOTE"
  trustExitCode = false
[difftool "gvimdiff"]
  cmd = gvim -f -u "$HOME/.vimrc.min" -d "$LOCAL" "$REMOTE"
  trustExitCode = false
[difftool "mvimdiff"]
  cmd = mvim -f -u "$HOME/.vimrc.min" -d "$LOCAL" "$REMOTE"
  trustExitCode = false
