# vim:fdm=marker sw=2 ts=2 ft=gitconfig noexpandtab:
[user]
	name = fuga
	email = f@u.ga
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto
[core]
	excludesfile = /home/fuga/.gitignore-global
	quotepath = false
	precomposeunicode = true
[push]
	default = matching
[alias]
	fixup = commit --amend -C HEAD
	edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
	add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
	dm = diff master
	dw = diff --color-words
	dc = diff --cached
	ds = diff --staged
	d1 = diff HEAD~
	d2 = diff HEAD~~
	d3 = diff HEAD~~~
	d4 = diff HEAD~~~~
	d5 = diff HEAD~~~~~
	d10 = diff HEAD~~~~~~~~~~
	ignore = !"f() { local s=$1; shift; \
		while [ $# -gt 0 ]; do s="$s,$1"; shift; done;\
		curl "http://gitignore.io/api/$s"; }; f"

[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line

[diff "applescript"]
	textconv = osadecompile
[diff "rtf"]
	textconv = textutil -convert txt -stdout
[difftool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
	trustExitCode = false
[difftool "p4diff"]
	path = p4diff
[difftool "gvimdiff"]
	cmd = gvim -f -d "$LOCAL" "$REMOTE"
	trustExitCode = false
[difftool "mvimdiff"]
	cmd = mvim -f -d "$LOCAL" "$REMOTE"
	trustExitCode = false
