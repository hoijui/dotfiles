[merge]
	; tool = vimdiff
	tool = mvimfugitive
	ff = false
[mergetool "p4merge"]
	path = p4merge
	keepTemporaries = false
	trustExitCode = false
[mergetool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
	trustExitCode = false
[mergetool "gvimdiff"]
	cmd = gvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
	trustExitCode = false
[mergetool "gvimfugitive"]
		; cmd = mvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
	cmd = gvim -f -c "Gdiff" "$MERGED"
	trustExitCode = false
[mergetool "mvimdiff"]
	cmd = mvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
	trustExitCode = false
[mergetool "mvimfugitive"]
		; cmd = mvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
	cmd = mvim -f -c "Gdiff" "$MERGED"
	trustExitCode = false
