[merge "mergepbx"]
  name = XCode project files merger
  driver = mergepbx %O %A %B
[mergetool "p4merge"]
  path = p4merge
  keepTemporaries = false
  trustExitCode = false
[mergetool "kdiff3"]
  path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false
[mergetool "vimfugitive"]
  ; cmd = mvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
  cmd = vim -f -u "$HOME/.vimrc.min" -c "Gdiff" "$MERGED"
  trustExitCode = false
[mergetool "gvimdiff"]
  cmd = gvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
  trustExitCode = false
[mergetool "gvimfugitive"]
  ; cmd = gvim -f -c "Gdiff" "$MERGED"
  cmd = gvim -f -u "$HOME/.vimrc.min" -c "Gdiff" "$MERGED"
  trustExitCode = false
[mergetool "mvimdiff"]
  cmd = mvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
  trustExitCode = false
[mergetool "mvimfugitive"]
  ; cmd = mvim -f -c "Gdiff" "$MERGED"
  cmd = mvim -f -u "$HOME/.vimrc.min" -c "Gdiff" "$MERGED"
  trustExitCode = false
