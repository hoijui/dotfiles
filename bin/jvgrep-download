#!/bin/bash

PACKAGE="mattn/jvgrep"
ARCH=$(uname -i)
KERNEL=$(uname -s | tr [A-Z] [a-z])
VER=4.4
EXT=zip

[ "$ARCH" = "x86_64" ] && ARCH=amd64
[ "$KERNEL" = "linux" ] && EXT=tar.gz
URL="https://github.com/${PACKAGE}/releases/download/v${VER}/$(basename $PACKAGE)_${KERNEL}_${ARCH}.${EXT}"

if [ $EXT = zip ] ; then
  curl -L "${URL}" | unzip
else
  curl -L "${URL}" | tar zxv
fi
