#!/bin/bash

usage() {
  prg_name=`basename $0`
  cat <<EOM
  Usage: $prg_name [-h]
EOM
  exit 1
}

main() {
  local args=""
  local arg=""
  local last_arg=""
  for arg in "$@" ; do
    args="$args $last_arg"
    last_arg="$arg"
  done
  echo "select * from columns where table_name like '%${last_arg}%'" | mysql $args information_schema | grep -i --color=auto "${last_arg}"
}

