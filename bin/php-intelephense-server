#!/bin/sh

PROJ=~/.local/php-intelephense-server

if [ ! -e "$PROJ" ]; then
  git clone --depth=1 https://github.com/bmewburn/intelephense-server.git "$PROJ"
  cd "$PROJ"
  npm install
  npm build
elif [ "$1" == "pull" ]; then
  cd "$PROJ"
  git pull
  npm install
  npm build
fi
case "$1" in
  server)
    cd $PROJ
    php lib/server.js --stdio
    ;;
  pull)
    ;;
  kill)
    ;;
esac

