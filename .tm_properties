excludeFilesInBrowser = "{$exclude,*.tmproj}"
excludeDirectories = "{.svn}"
exclude = "{$exclude,*.tmproj}"

[ .git/COMMIT_EDITMSG ]
spellChecking = true
spellingLanguage = 'en'

[*.{jpg, jpeg, png, gif, tif, tiff, pdf, psd, ico, icns, xls, xlsx, ppt, doc, docx}]
binary = true

